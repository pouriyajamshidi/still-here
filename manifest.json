{
    "manifest_version": 2,
    "name": "YouTube Still Here",
    "description": "Prevents YouTube from pausing your playlists by showing 'Video paused. Continue watching?' dialog",
    "version": "1.0",
    "browser_action": {
        "default_icon": "./icons/play.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "stillHere.js"
            ]
        }
    ]
}